FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY web/package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY web/ ./

# Expose port
EXPOSE 8081

# Environment for Docker hot-reload
ENV WATCHPACK_POLLING=true
ENV CHOKIDAR_USEPOLLING=true

# Start dev server
CMD ["npm", "start"]